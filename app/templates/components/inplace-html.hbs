<span class='content'>
  {{#unless isEditing}}
    <span class='editable'>
      {{#if value.length}}
        {{big-text text=value action='edit' renderHtml=true}}
      {{else}}
        <span {{action 'edit'}}>{{clickPrompt}}</span>
      {{/if}}
    </span>
  {{else}}
    <span class='editor'>
      <span class='control list-reset'>
        {{froala-editor
          params=editorParams
          value=buffer 
        }}
      </span>
      <span class='actions'>
        <button class='done text' title='{{t "general.save"}}' {{action 'save'}}>{{t 'general.done'}}</button>
        <button class='cancel text' title='{{t "general.cancel"}}' {{action 'cancel'}}>{{t 'general.cancel'}}</button>
      </span>
    </span>
  {{/unless}}
</span>
