<div class="users-pagination">
  {{#if prevPages}}
    {{#if arrows}}
      <a class="prev-arrow" {{action 'getPrevPage'}}>{{fa-icon 'arrow-left'}}</a>
    {{else}}
      <a class="next-button" {{action 'getPrevPage'}}>Prev</a>
    {{/if}}
  {{else}}
    {{#if arrows}}
      <span>{{fa-icon 'arrow-left'}}</span>
    {{else}}
      <span>Prev</span>
    {{/if}}
  {{/if}}

  <span>|</span>

  {{#if morePages}}
    {{#if arrows}}
      <a class="next-arrow" {{action 'getNextPage'}}>{{fa-icon 'arrow-right'}}</a>
    {{else}}
      <a class="next-button" {{action 'getNextPage'}}>Next</a>
    {{/if}}
  {{else}}
    {{#if arrows}}
      <span>{{fa-icon 'arrow-right'}}</span>
    {{else}}
      <span>Next</span>
    {{/if}}
  {{/if}}
</div>
