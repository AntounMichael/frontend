<header class="main">
  {{#link-to "dashboard" classNames='logo'}}
    <span class='image' />
    <span class='visually-hidden'>
      {{t 'navigation.dashboard'}}
    </span>
  {{/link-to}}
  <div class="tools">
    <div class='user'>
      {{#action-menu title=userName icon='user' classNameBindings=':user-menu'}}
        <li>{{t "navigation.logout"}}</li>
      {{/action-menu}}
    </div>
  </div>
  <h1>{{title}}</h1>
</header>
