<section class='detail-block'>
  <div class='detail-title'>
    {{t 'general.objectives'}} ({{subject.objectives.length}})
    {{#if isManagingParents}}
      <span class='detail-specific-title'>
        {{t 'courses.objectiveParentTitle'}}
      </span>
    {{/if}}
  </div>

  <div class='detail-actions'>
    {{#if isManagingParents}}
      <button class='add' {{action 'doneManagingParents'}}>{{t 'general.done'}}</button>
    {{else}}
      <button class='add'>{{t 'general.addNew'}}</button>
    {{/if}}
  </div>
  <div class='detail-content'>
    {{#liquid-if isManagingParents class="horizontal"}}
      {{#if isCourse}}
        {{course-objective-manager
          courseObjective=currentlyManagedObjective
        }}
      {{/if}}
      {{#if isSession}}
        {{session-objective-manager
          sessionObjective=currentlyManagedObjective
        }}
      {{/if}}
    {{else}}
      {{#if isCourse}}
        {{course-objective-list
          course=subject
          manageParents="manageParents"
        }}
      {{/if}}
      {{#if isSession}}
        {{session-objective-list
          session=subject
          manageParents="manageParents"
        }}
      {{/if}}
    {{/liquid-if}}
  </div>
</section>
