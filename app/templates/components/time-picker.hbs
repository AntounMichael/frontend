    {{#x-option value=minute}}{{minute}}{{/x-option}}
  {{/each}}
{{/x-select}}
{{#x-select value=ampm action="changeAmPm" classNames='ampm'}}
  {{#each ampms as |ampm|}}
    {{#x-option value=ampm}}{{ampm}}{{/x-option}}
  {{/each}}
{{/x-select}}
