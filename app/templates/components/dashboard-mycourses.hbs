{{#if listOfCourses.length}}
  <div class='dashboard-block-header'>
    {{t 'general.myCourses'}}
  </div>
  
  <div class='dashboard-block-body'>
    <table>
      <tbody>
        {{#each listOfCourses as |course|}}
          {{#link-to 'course' course}}
            <tr class='clickable'>
              <td>{{fa-icon 'external-link-square'}}</td>
              <td>{{course.academicYear}}</td>
              <td>{{course.title}}</td>
            </tr>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
