<div class='detail-header'>
  <span class='title'>
    {{#if editable}}
      {{inplace-text value=session.title save='changeTitle'}}
    {{else}}
      <h2>{{session.title}}</h2>
    {{/if}}
  </span>
  <span class ='actions'>
    {{#action-menu title=menuTitle icon=menuIcon classNameBindings='publicationStatus :publication-menu :session-publication-menu :right-edge'}}
      {{#if showAsIs}}
        <li class='danger' {{action 'publish'}}>{{t 'publish.publishAsIs'}}</li>
      {{/if}}
      {{#if showPublish}}
        <li class='good' {{action 'publish'}}>{{t 'publish.publishSession'}}</li>
      {{/if}}
      {{#if showReview}}
        {{#link-to 'course.sessionpublicationcheck' course session}}
          <li class='good' >{{t 'publish.reviewMissingItems' countBinding='session.allPublicationIssuesLength'}}</li>
        {{/link-to}}
      {{/if}}
      {{#if showTbd}}
        <li class='good' {{action 'publishAsTbd'}}>{{t 'publish.markAsScheduled'}}</li>
      {{/if}}
      {{#if showUnPublish}}
        <li class='danger' {{action 'unpublish'}}>{{t 'publish.unPublishSession'}}</li>
      {{/if}}
    {{/action-menu}}
  </span>
</div>
<section class='detail-overview detail-block'>
  <div class='detail-title'>
    {{t 'general.overview'}}
  </div>
  <div class='detail-content'>
    {{#if editable}}
      <div class="inline-label-data-block sessiontype">
        <label>{{t "sessions.type"}}:</label>
        <div>
          {{inplace-select
            value=session.sessionType.id
            options=sortedSessionTypes
            save='changeSessionType'
          }}
        </div>
      </div>
      <br />
      <br />
      <div class="inline-label-data-block sessionsupplemental">
        <label>{{t "sessions.supplementalCurriculum"}}:</label>
        <div>{{inplace-boolean value=session.supplemental save='changeSupplemental'}}</div>
      </div>
      <div class="inline-label-data-block sessionspecialattire">
        <label>{{t "sessions.specialAttireRequired"}}:</label>
        <div>{{inplace-boolean value=session.attireRequired save='changeSpecialAttire'}}</div>
      </div>
      <div class="inline-label-data-block sessionsepcialequiptment">
        <label>{{t "sessions.specialEquipmentRequired"}}:</label>
        <div>{{inplace-boolean value=session.equipmentRequired save='changeSpecialEquipment'}}</div>
      </div>
      <br />
      <div class="inline-label-data-block">
        <label>{{t "sessions.independentLearning"}}:</label>
        <div class='independentlearningcontrol' {{action 'toggleIndependentLearning'}}>{{boolean-check value=session.isIndependentLearning}}</div>
      </div>
      {{#if session.isIndependentLearning}}
        <div class="inline-label-data-block sessionilmhours">
          <label>{{t "sessions.hours"}}:</label>
          {{inplace-text value=session.ilmSessionFacet.hours save='changeIlmHours'}}
        </div>
        <div class="inline-label-data-block sessionilmduedate">
          <label>{{t "sessions.dueBy"}}:</label>
          <div>{{inplace-date value=session.ilmSessionFacet.dueDate save='changeIlmDueDate'}}</div>
        </div>
      {{/if}}
      <br />
      <div class="inline-label-data-block sessiondescription">
        <label>{{t "general.description"}}:</label>
        <div>{{inplace-textarea value=session.sessionDescription.description save='changeDescription'}}</div>
      </div>
    {{else}}
      <div class="inline-label-data-block">
        <label>{{t "sessions.type"}}:</label>
        <div>{{session.sessionType.title}}</div>
      </div>
      <br />
      <div class="inline-label-data-block">
        <label>{{t "sessions.supplementalCurriculum"}}:</label>
        <div>{{boolean-check value=session.supplemental}}</div>
      </div>
      <div class="inline-label-data-block">
        <label>{{t "sessions.specialAttireRequired"}}:</label>
        <div>{{boolean-check value=session.attireRequired}}</div>
      </div>
      <div class="inline-label-data-block">
        <label>{{t "sessions.specialEquipmentRequired"}}:</label>
        <div>{{boolean-check value=session.equipmentRequired}}</div>
      </div>
      <br />
      <div class="inline-label-data-block">
        <label>{{t "sessions.independentLearning"}}:</label>
        <div>{{boolean-check value=isIndependentLearning}}</div>
      </div>
      <br />
      <div class="inline-label-data-block">
        <label>{{t "general.description"}}:</label>
        <div>{{session.sessionDescription.description}}</div>
      </div>
    {{/if}}
    <br />
    <br />

    <div class="inline-label-data-block">
      <label>{{t "general.associatedGroups"}}:</label>
      <div>
        {{#if session.associatedLearnerGroups.isFulfilled}}
          <span>
            {{#each group in session.associatedLearnerGroups}}
              {{group.title}},
            {{else}}
              {{t 'general.none'}}
            {{/each}}
          </span>
        {{else}}
          {{loading-part}}
        {{/if}}
      </div>
    </div>
  </div>
</section>
