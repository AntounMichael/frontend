{{#if showIcon}}
  {{#if isScheduled}}
    {{fa-icon 'clock-o'}}
  {{else}}
    {{#if isPublished}}
      {{fa-icon 'star'}}
    {{else}}
      {{fa-icon 'star-half-full'}}
    {{/if}}
  {{/if}}
{{/if}}

{{#if isScheduled}}
  {{t 'general.scheduled'}}
{{else}}
  {{#if isPublished}}
    {{t 'general.published'}}
  {{else}}
    {{t 'general.notPublished'}}
  {{/if}}
{{/if}}
