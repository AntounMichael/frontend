{{#expander-box
  title=group.title
  forceOpen=group.isNew
  isSaveable=isDirty
  isRemoveable=true
  save='save'
  remove='remove'
}}
  <section {{bind-attr class=":instructorgroup isDirty"}}>
    <div class='title'>
      <label>{{t "general.title"}}
        {{input value=bufferedTitle}}
      </label>
    </div>
    {{ilios-groupmembers
     titleTranslation='instructorGroups.instructors'
      users=group.users
      remove='removeInstructor'
      add='addInstructor'
      search='searchUsers'
      searchResults=userSearchResults
    }}

    {{ilios-relatedcourses
      courses=resolvedCourses
    }}
  </section>
{{/expander-box}}
