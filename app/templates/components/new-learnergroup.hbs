<div class="form-col-12">
  <label class="form-label">Create New:</label>
  <div class="form-data">
    {{click-choice-buttons
    buttonContent1=(t 'learnerGroups.singleGroup')
    buttonContent2=(t 'learnerGroups.multipleGroups')
    firstChoicePicked=singleMode
    action="setMode"
    }}
  </div>
</div>

<div class="detail-content">
{{#if singleMode}}
  <label class="form-col form-col-12">
    <div class="form-label">{{t 'general.title'}}:</div>

    <div class="form-data form-data-text form-input-row">
      <input type="text" placeholder={{t 'learnerGroups.learnerGroupTitlePlaceholder'}}
        class="{{if topErrorMessage 'has-error'}}"
        onChange={{action "changeValue" value="target.value"}}
        oninput={{action "changeValue" value="target.value"}}
        onfocus={{action "displayError"}} />
      {{#if topErrorMessage}}
        <span class="validation-error-message">{{topErrorMessage}}</span>
      {{/if}}
    </div>
  </label>
{{else}}
  <div>TODO</div>
{{/if}}
  <div class="form-col-6 form-data-submit">
    <button class='done text' {{action 'save'}}>{{t 'general.done'}}</button>
    <button class='cancel text' {{action 'cancel'}}>{{t 'general.cancel'}}</button>
  </div>
</div>
