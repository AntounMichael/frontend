{{#unless isEditing}}
  <span {{action 'edit'}} class='editable'>
    {{#if value}}
      {{moment-format value dateFormat}}
    {{else}}
      {{clickPrompt}}
    {{/if}}
  </span>
{{else}}
  <span class='editor'>
    <span class='control'>
      {{pikaday-input value=dateBuffer format=dateFormat}}
    </span>
    <span class='actions'>
      <button class='done icon' title='{{t "general.save"}}' {{action 'save'}}>{{fa-icon 'check'}}</button>
      <button class='cancel icon' title='{{t "general.cancel"}}' {{action 'cancel'}}>{{fa-icon 'times'}}</button>
    </span>
  </span>
{{/unless}}
