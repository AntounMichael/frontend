<section class='fullwidth main-border'>
  <section class='resultslist'>
    <div class="resultslist-header">
      <div class="resultslist-title">
        <h2>{{t 'general.schools'}}</h2>
      </div>
      <div class='resultslist-actions'>
        {{expand-collapse-button value=showNewSchoolForm action="toggleNewSchoolForm"}}
      </div>
    </div>
    <section class='resultslist-new'>
      {{#liquid-if showNewSchoolForm class='vertical'}}
        <div class="new-result-title">{{t 'schools.new'}}</div>

        <div class="detail-content form-container">
          <div class="form-col-6 multi-row">
            <label class="form-label">{{t "general.title"}}:</label>
            <div class="form-data">
              {{one-way-input
                value=title
                update=(action (mut title))
                onenter=(action 'createNewSchool')
                onescape=(action 'hideNewSchoolForm')
                focusOut=(action 'addErrorDisplayFor' 'title')
                class=(if (and errors.title (is-in showErrorsFor 'title')) 'has-error')
              }}
              {{#if (and errors.title (is-in showErrorsFor 'title'))}}
                <span class="validation-error-message">{{errors.title}}</span>
              {{/if}}
            </div>
            <label class="form-label">{{t "schools.administratorEmail"}}:</label>
            <div class="form-data">
              {{one-way-input
                value=iliosAdministratorEmail
                update=(action (mut iliosAdministratorEmail))
                onenter=(action 'createNewSchool')
                onescape=(action 'hideNewSchoolForm')
                focusOut=(action 'addErrorDisplayFor' 'iliosAdministratorEmail')
                class=(if (and errors.iliosAdministratorEmail (is-in showErrorsFor 'iliosAdministratorEmail')) 'has-error')
              }}
              {{#if (and errors.iliosAdministratorEmail (is-in showErrorsFor 'iliosAdministratorEmail'))}}
                <span class="validation-error-message">{{errors.iliosAdministratorEmail}}</span>
              {{/if}}
            </div>
          </div>
          <div class="form-col-6 form-data-submit">
            <button class='done text' {{action 'createNewSchool'}}>
              {{#liquid-if isSavingNewSchool 'crossFade'}}
                {{fa-icon 'spinner' spin=true}}
              {{else}}
                {{t 'general.done'}}
              {{/liquid-if}}
            </button>
            <button class='cancel text' {{action 'hideNewSchoolForm'}}>{{t 'general.cancel'}}</button>
          </div>
        </div>

      {{/liquid-if}}

      {{#each newSchools as |school|}}
        <div class='savedschool saved-result'>
          {{#link-to 'school' school}}
            {{fa-icon 'external-link-square'}} {{school.title}}
          {{/link-to}}
          {{t 'general.savedSuccessfully'}}
        </div>
      {{/each}}
    </section>
    <div class='resultslist-list'>
      <table>
        <thead>
          <tr>
            <th class='text-left' colspan=4>{{t 'general.school'}}</th>
            <th class='text-left' colspan=1>{{t 'general.actions'}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each sortedSchools as |school|}}
            <tr>
              <td class='text-left' colspan=4>
                {{#link-to 'school' school}}
                  {{school.title}}
                {{/link-to}}
              </td>

              <td class='text-left' colspan=1>
                {{#link-to 'school' school class='edit'}}
                  {{fa-icon 'edit'}}
                {{/link-to}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </section>
</section>
