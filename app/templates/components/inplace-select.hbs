{{#unless isEditing}}
  <span {{action 'edit'}} class='editable'>{{displayValue}}</span>
{{else}}
  <span class='editor'>
    <span class='control'>
      <select onchange={{action "changeSelection" value="target.value"}}>
        {{#if showSelectPrompt}}
          <option value=null>{{selectPrompt}}</option>
        {{/if}}
        {{#each proxiedOptions as |option|}}
          <option value={{option.value}} selected={{is-equal option.value buffer}}>
            {{option.label}}
          </option>
        {{/each}}
      </select>
    </span>
    <span class='actions'>
      <button class='done icon' title='{{t "general.save"}}' {{action 'save'}}>{{fa-icon 'check'}}</button>
      <button class='cancel icon' title='{{t "general.cancel"}}' {{action 'cancel'}}>{{fa-icon 'times'}}</button>
    </span>
  </span>
{{/unless}}
