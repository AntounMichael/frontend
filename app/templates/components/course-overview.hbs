<section class='detail-overview detail-block'>
  <div class='detail-title'>
    {{t 'general.overview'}}
  </div>
  <div class='detail-actions'>
    {{#link-to 'printCourse' course}}
      <button>{{t 'general.printSummary'}}</button>
    {{/link-to}}
  </div>
  <div class='detail-content form-container'>
      <div class="form-col-6 multi-row">
        <label class="form-label courseexternalid">{{t "courses.externalId"}}:</label>
        <div class="form-data">{{inplace-text value=course.externalId save='changeExternalId'}}</div>
        <label class="form-label clerkshiptype">{{t "courses.clerkshipType"}}:</label>
        <div class="form-data">
          {{inplace-select
            value=course.clerkshipType.id
            options=clerkshipTypeOptions
            save='changeClerkshipType'
            selectPromptTranslation='courses.notAClerkship'
            clickPromptTranslation='courses.notAClerkship'
          }}
        </div>
        <label class="form-label courselevel">{{t "courses.level"}}:</label>
        <div class="form-data">{{inplace-select value=course.level options=levelOptions save='changeLevel'}}</div>
      </div>

      <div class="form-col-6 multi-row">
        <label class='form-label coursestartdate'>{{t "general.start"}}:</label>
        <div class="form-data">{{inplace-date value=course.startDate save='changeStartDate'}}</div>
        <label class="form-label courseenddate">{{t "general.end"}}:</label>
        <div class="form-data">{{inplace-date value=course.endDate save='changeEndDate'}}</div>
      </div>  
      <div class="form-col-12">
      <label>{{t "general.directors"}}:</label>
        <span>
          <ul class='removable-list'>
            {{#each user in sortedDirectors}}
            <li {{action 'removeDirector' user}}>{{user.fullName}}{{fa-icon 'remove' classNames='removex'}}</li>
            {{/each}}
          </ul>
        </span>
        {{user-search
          addUser='addDirector'
          currentlyActiveUsers=course.directors
        }}
      </div>
  </div>
</section>
