<section id='sessions' class='detail-block'>
  <div class='detail-title'>
    {{t 'general.sessions'}} ({{sessions.length}})
  </div>
  <div class='detail-actions'>
    <button class='create' {{action 'createNewSessions'}}>{{t 'courses.newSession'}}</button>
  </div>
  <div class='detail-content'>
    {{#if sessions}}
      {{input type='text' value=filter placeholder='Filter by title'}}
      <table>
        <thead>
          <tr>
            <th colspan=2>{{t 'general.title'}}</th>
            <th>{{t 'general.type'}}</th>
            <th>{{t 'general.groups'}}</th>
            <th>{{t 'courses.firstOffering'}}</th>
            <th>{{t 'general.offerings'}}</th>
            <th>{{t 'general.status'}}</th>
            <th>{{t 'general.actions'}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each session in filteredContent}}
            <td colspan=2>
              {{#link-to 'session' session}}
                {{session.title}}
              {{/link-to}}
            </td>
            <td>{{session.sessionType.title}}</td>
            <td>{{session.learnerGroupCount}}</td>
            <td>
              {{#if session.firstOfferingDate}}
                {{moment session.firstOfferingDate 'MM/DD/YYYY h:mma'}}
              {{/if}}
            </td>
            <td>{{session.offerings.length}}</td>
            <td>{{publication-status item=session showIcon=false}}</td>
            <td>
              {{#action-menu}}
                <li {{action 'edit'}}>Edit</li>
              {{/action-menu}}
            </td>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>{{t 'courses.noSessions'}}</p>
    {{/if}}
  </div>
</section>
