<div class='title clickable'  onclick={{action expand}}>
  {{t 'general.sessionAttributes'}}
</div>
<div class='content'>
  <table class='condensed'>
    <thead>
      <tr>
        <th class='text-left'>{{t 'general.attribute'}}</th>
        <th class='text-left'>{{t 'general.enabled'}}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{t 'general.attendanceRequired'}}</td>
        <td>{{fa-icon (if (await showSessionAttendanceRequired) 'check' 'ban') class=(if (await showSessionAttendanceRequired) "yes" "no")}}</td>
      </tr>
      <tr>
        <td>{{t 'general.supplementalCurriculum'}}</td>
        <td>{{fa-icon (if (await showSessionSupplemental) 'check' 'ban') class=(if (await showSessionSupplemental) "yes" "no")}}</td>
      </tr>
      <tr>
        <td>{{t 'general.specialAttireRequired'}}</td>
        <td>{{fa-icon (if (await showSessionSpecialAttireRequired) 'check' 'ban') class=(if (await showSessionSpecialAttireRequired) "yes" "no")}}</td>
      </tr>
      <tr>
        <td>{{t 'general.specialEquipmentRequired'}}</td>
        <td>{{fa-icon (if (await showSessionSpecialEquipmentRequired) 'check' 'ban') class=(if (await showSessionSpecialEquipmentRequired) "yes" "no")}}</td>
      </tr>
    </tbody>
  </table>
</div>
