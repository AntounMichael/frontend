<span class='content'>
  {{#unless isEditing}}
    <span class='editable'>
      {{big-text text=value action='edit' promptText=clickPrompt}}
    </span>
  {{else}}
    <span class='editor'>
      <span class='control'>
        {{froala-editor params=editorParams value=buffer}}
      </span>
      <span class='actions'>
        <button class='done icon' title='{{t "general.save"}}' {{action 'pullDataAndSave'}}>{{fa-icon 'check'}}</button>
        <button class='cancel icon' title='{{t "general.cancel"}}' {{action 'cancel'}}>{{fa-icon 'times'}}</button>
      </span>
    </span>
  {{/unless}}
</span>
