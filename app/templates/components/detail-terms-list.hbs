{{#if sortedTerms}}
  <div>
    <strong>{{vocabulary.title}}</strong> ({{vocabulary.school.title}})
  </div>
  <ul class="{{if canEdit 'removable-list' null}} tag-list selected-taxonomy-terms">
    {{#each sortedTerms as |term|}}
      {{#if canEdit}}
        {{detail-terms-list-item canEdit=true remove=remove term=term}}
      {{else}}
        {{detail-terms-list-item canEdit=false term=term}}
      {{/if}}
    {{/each}}
  </ul>
{{/if}}
