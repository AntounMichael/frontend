<section class='half-grouping'>
  <header class="title-selected-groups center">{{t 'general.selected'}}</header>

  <ul class='tree-list removable'>
    {{#each sortedLearnerGroups as |learnerGroup|}}
      <li {{action 'removeLearnerGroup' learnerGroup.group}}>
        <div class="selected-subgroup-style">
          {{learnerGroup.sortName}}
        </div>
      </li>
    {{else}}
      <li>{{t 'courses.noSelectedLearnerGroups'}}</li>
    {{/each}}
  </ul>
</section>

<section class='half-grouping'>
  <header class="title-available-groups center">{{t 'courses.availableLearnerGroups'}}</header>

  <ul class='tree-list selectable'>
    {{#each cohort.filteredAvailableLearnerGroups as |learnerGroup|}}
      <li {{action 'addLearnerGroup' learnerGroup}}>
        {{#if learnerGroup.allParentTitles}}
          <div class="available-subgroup-style">
            {{separated-list icon='angle-right' list=learnerGroup.allParentTitles}}
            {{learnerGroup.title}}
          </div>
        {{else}}
          {{learnerGroup.title}}
        {{/if}}
      </li>
    {{else}}
      <li>{{t 'courses.noAvailableLearnerGroups'}}</li>
    {{/each}}
  </ul>
</section>
