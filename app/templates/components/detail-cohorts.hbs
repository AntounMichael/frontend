<div class='title'>
  {{#if isManaging}}
    <span class='specific-title'>
      {{t 'courses.cohortsManageTitle'}}
    </span>
  {{else}}
    {{t 'courses.cohorts'}} ({{course.cohorts.length}})
  {{/if}}
</div>

<div class='actions'>
  {{#if isManaging}}
    <button class='bigadd' {{action 'save'}}>
      {{fa-icon (if isSaving 'spinner' 'check') spin=(if isSaving true false)}}
    </button>
    <button class='bigcancel' {{action 'cancel'}}>{{fa-icon 'undo'}}</button>
  {{else if editable}}
    <button {{action 'manage'}}>{{t 'courses.cohortsManageTitle'}}</button>
  {{/if}}
</div>
<div class='detail-cohorts-content'>
  {{#if isManaging class="horizontal"}}
      {{detail-cohort-manager
        selectedCohorts=bufferedCohorts
        add='addCohortToBuffer'
        remove='removeCohortFromBuffer'
      }}
  {{else}}
    {{detail-cohort-list
      cohorts=course.cohorts
    }}
  {{/if}}
</div>
