{{#if (and (is-fulfilled readonlySessionType) (await readonlySessionType))}}
  <div class="session-type-title">{{sessionType.title}}</div>
  {{school-session-type-form
    title=(get (await readonlySessionType) "title")
    calendarColor=(get (await readonlySessionType) "calendarColor")
    assessment=(get (await readonlySessionType) "assessment")
    selectedAssessmentOptionId=(get (await readonlySessionType) "selectedAssessmentOptionId")
    selectedAamcMethodId=(get (await readonlySessionType) "selectedAamcMethodId")
    canEditTitle=(eq sessionType.sessionCount 0)
    canEditAamcMethod=true
    canEditCalendarColor=true
    canEditAssessment=(eq sessionType.sessionCount 0)
    canEditAssessmentOption=(eq sessionType.sessionCount 0)
    save=(perform save)
    close=close
  }}
{{else}}
  {{fa-icon 'spinner' spin=true}}
{{/if}}
