<ul class='removable-list'>
  {{#each sortedLearnerGroups as |learnerGroup|}}
    <li {{action 'remove' learnerGroup}}>
      <em>
        {{separated-list icon='angle-right' list=learnerGroup.allParentTitles}}
      </em>
      <strong>
        {{learnerGroup.title}}
      </strong>
      {{fa-icon 'remove'}}
    </li>
  {{/each}}
</ul>
{{search-box value=filter placeholder=placeholder}}
<div class='selectable-list'>
  <h5>{{t 'courses.availalbeLearnerGroups'}}</h5>
  <ul>
    {{#each filteredCohorts as |cohort|}}
      <li class='static'>{{cohort.displayTitle}}
        <ul>
          {{#each cohort.filteredAvailableLearnerGroups as |learnerGroup|}}
            <li {{action 'add' learnerGroup}}>
              <em>
                {{separated-list icon='angle-right' list=learnerGroup.allParentTitles}}
              </em>
              <strong>
                {{learnerGroup.title}}
              </strong>
            </li>

          {{else}}
            <li class='static'>{{t 'courses.noAvailalbeLearnerGroups'}}</li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
</div>
