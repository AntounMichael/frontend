<span class='content'>
  {{#unless isEditing}}
    <span {{action 'edit'}} class='editable'>
      {{#if workingValue}}
        {{workingValue}}
      {{else}}
        {{clickPrompt}}
      {{/if}}
    </span>
  {{else}}
    <span class='editor'>
      <span class='control'>
        {{input type='text' value=workingValue action='save'}}
      </span>
      <span class='actions'>
        <button class='save' title='{{t "general.save"}}' {{action 'save'}}>{{fa-icon 'check' classNames='add'}}</button>
        <button class='cancel' title='{{t "general.cancel"}}' {{action 'cancel'}}>{{fa-icon 'times' classNames='remove'}}</button>
      </span>
    </span>
  {{/unless}}
</span>
