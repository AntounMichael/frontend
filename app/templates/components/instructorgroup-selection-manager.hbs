<ul class='removable-list'>
  {{#each sortedInstructorGroups as |instructorGroup|}}
    <li {{action 'remove' instructorGroup}}>
      {{instructorGroup.title}}
      {{fa-icon 'remove'}}
    </li>
  {{/each}}
</ul>
{{search-box value=filter placeholder=placeholder}}
<div class='selectable-list'>
  <h5>{{t 'courses.availableInstructorGroups'}}</h5>
  <ul>
    {{#each filteredAvailableInstructorGroups as |instructorGroup|}}
      <li {{action 'add' instructorGroup}}>
          {{instructorGroup.title}}
      </li>
    {{else}}
      <li class='static'>{{t 'courses.noAvailableInstructorGroups'}}</li>
    {{/each}}
  </ul>
</div>
