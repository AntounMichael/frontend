{{head-layout}}
{{ember-load-remover}}
{{api-version-check}}
{{connection-status}}
{{#service-worker-update-notify}}
  {{update-notification}}
{{/service-worker-update-notify}}
{{ilios-header title=translatedTitle currentlyLoading=currentlyLoading}}
{{loading-bar isLoading=currentlyLoading}}
{{#if session.isAuthenticated}}
  {{ilios-navigation}}
{{/if}}
<div id='site-container'>
  <div class='flash-messages'>
    {{#each flashMessages.arrangedQueue as |f|}}
      {{#flash-message flash=f as |component flash|}}
        {{t flash.message}}
      {{/flash-message}}
    {{/each}}
  </div>

  {{#if showErrorDisplay}}
    {{error-display errors=errors clearErrors=(action 'clearErrors')}}
  {{else}}
    {{outlet}}
  {{/if}}
</div>
