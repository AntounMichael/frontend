{{#liquid-if isEditing class='crossFade'}}
  {{learnergroup-editor toggleEditMode=(toggle 'isEditing' this) learnerGroup=model}}
{{else}}
  {{learnergroup-summary
    toggleEditMode=(toggle 'isEditing' this)
    sortUsersBy=sortUsersBy
    setSortUsersBy=(action (mut sortUsersBy))
    learnerGroup=model
  }}
{{/liquid-if}}
