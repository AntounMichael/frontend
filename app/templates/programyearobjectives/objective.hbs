<fieldset>
  <legend>Edit Objective</legend>
  <label {{bind-attr for="view.titleField.elementId"}}>Title</label>
  {{view Ember.TextArea value=title viewName="titleField"}}

  <label {{bind-attr for="view.competencyField.elementId"}}>Competency</label>
  {{view Ember.Select optionLabelPath="content.title" content=competencies value=competency viewName="competencyField"}}
  <button {{action 'save'}}>Save</button>
</fieldset>
